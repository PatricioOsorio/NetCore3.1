@model AmigoEditarModelo
@{
  ViewData["Title"] = "Editar amigo";
  var fotoRuta = "/images/" + (Model.FotoRutaExistente ?? "user.png");
}

<h1 class="display-4 text-center text-gradient mb-3 fw-bold">Editar amigo</h1>


<div class="w-100 p-3 p-lg-5 border rounded-3 bg-light">
  <form asp-controller="Amigo" asp-action="EditarAmigo" method="post" enctype="multipart/form-data">

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="FotoRutaExistente" />

    <div class="row mb-3">
      <label class="col-sm-2 col-form-label" asp-for="Nombre"></label>
      <div class="col-sm-10">
        <input class="form-control" asp-for="Nombre">
        <span class="text-danger" asp-validation-for="Nombre"></span>
      </div>
    </div>

    <div class="row mb-3">
      <label class="col-sm-2 col-form-label" asp-for="Correo"></label>
      <div class="col-sm-10">
        <input class="form-control" asp-for="Correo">
        <span class="text-danger" asp-validation-for="Correo"></span>
      </div>
    </div>

    <div class="row mb-3">
      <label class="col-sm-2 col-form-label" asp-for="Ciudad"></label>
      <div class="col-sm-10">
        <select asp-for="Ciudad" asp-items="Html.GetEnumSelectList<Provincia>()" class="form-select">
          <option selected>Abrir menú</option>
        </select>
        <span class="text-danger" asp-validation-for="Ciudad"></span>
      </div>
    </div>

    <div class="row mb-3">
      <label class="col-sm-2 col-form-label" asp-for="Foto"></label>
      <div class="col-sm-10">
        <input class="form-control" asp-for="Foto" custom-file-input>
        <span class="text-danger" asp-validation-for="Foto"></span>
      </div>
    </div>

    <div class="text-center">
      <img src="@fotoRuta" class="rounded border w-25 h-25" alt="@Model.Nombre">
    </div>

    <button class="btn btn-warning"><i class="fas fa-edit"></i> Editar</button>
    <a class="btn btn-outline-secondary" asp-controller="Amigo" asp-action="Index"><i class="fas fa-arrow-alt-circle-left"></i> Cancelar</a>

  </form>
</div>
