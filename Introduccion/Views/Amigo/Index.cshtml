@model List<Amigo>

@{
  ViewData["Title"] = "Index";
}

  <a class="btn btn-primary mb-3" asp-controller="Usuarios" asp-action="CrearUsuario">Crear amigo</a>

<table class="table table-striped table-hover table-borderless shadow align-middle text-center">
  <thead>
    <tr class="table-dark">
      <th>Id</th>
      <th>Nombre</th>
      <th>Correo</th>
      <th>Ciudad</th>
      <th>Operaciones</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var amigo in Model)
    {
      <tr>
        <td>@amigo.Id</td>
        <td>@amigo.Nombre</td>
        <td>@amigo.Correo</td>
        <td>@amigo.Ciudad</td>
        <td class="d-flex justify-content-center g-3">
          <a asp-controller="Amigo" asp-action="DetallesAmigo" asp-route-id="@amigo.Id" class="btn btn-info mx-1">Ver</a>
          <a asp-controller="Amigo" asp-action="EditarAmigo" asp-route-id="@amigo.Id" class="btn btn-warning mx-1">Editar</a>
          <a asp-controller="Amigo" asp-action="EliminarAmigo" asp-route-id="@amigo.Id" class="btn btn-danger mx-1">Borrar</a>
        </td>
      </tr>
    }
  </tbody>
</table>
