@model LoginView

@{
  ViewData["Title"] = "Iniciar sesion";
}

<div class="d-flex flex-row justify-content-center">
  <form method="post" style="min-width: 500px">
    <img class="mb-4 mx-auto d-block" src="~/images/icons/logo.jpg" alt="" width="150" height="150">
    <h1 class="h3 mb-3 fw-normal">Iniciar Sesion</h1>

    <div class="mb-3">
      <label asp-for="Email"></label>
      <input class="form-control" asp-for="Email">
      <span class="text-danger" asp-validation-for="Email"></span>
    </div>

    <div class="mb-3">
      <label asp-for="Password"></label>
      <input class="form-control" asp-for="Password">
      <span class="text-danger" asp-validation-for="Password"></span>
    </div>

    <div class="mb-3 form-check form-switch">
      <input class="form-check-input" asp-for="RememberMe">
      <label class="form-check-label" asp-for="RememberMe"></label>
      <span class="text-danger" asp-validation-for="RememberMe"></span>
    </div>

    <button class="w-100 btn btn-lg btn-primary" type="submit">Iniciar sesion</button>

    <div class="mt-3 text-danger" asp-validation-summary="All"></div>
  </form>
</div>