@model IEnumerable<IdentityRole>

@{
  ViewData["Title"] = "Lista de roles";
}

@if (Model.Any())
{
  <a class="btn btn-primary mb-3" asp-controller="Administracion" asp-action="CrearRol">Crear rol</a>

  <table class="table table-striped table-hover table-borderless shadow align-middle text-center">
    <thead class="table-dark">
      <tr>
        <th>Id</th>
        <th>Nombre</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var rol in Model)
      {
        <tr>
          <td>@rol.Id</td>
          <td>@rol.Name</td>
          <td class="d-flex justify-content-center">
            <a class="btn btn-warning mx-1" asp-controller="Administracion" asp-action="EditarRol" asp-route-id="@rol.Id">Editar</a>
            <a class="btn btn-danger mx-1">Eliminar</a>
          </td>
        </tr>
      }
    </tbody>
  </table>

}
else
{
  <div class="alert alert-warning" role="alert">
    <h1 class="alert-heading">No existen roles</h1>
    <hr>
    <a class="text-muted" asp-controller="Administracion" asp-action="CrearRol">Crear nuevo rol</a>
  </div>
}