@model List<RolUsuarioView>

@{
  ViewData["Title"] = "Gestionar Roles Usuario";
  var id = ViewBag.IdUsuario;
}

<div class="w-100 p-3 p-lg-5 border rounded-3 bg-light">
  <h1 class="display-4 text-center text-gradient fw-bold">Gestionar roles usuario</h1>

  <form method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
      <div class="form-check">
        <input type="hidden" asp-for="@Model[i].RolId" />
        <input type="hidden" asp-for="@Model[i].RolNombre" />
        <input class="form-check-input" asp-for="@Model[i].EstaSeleccionado">
        <label class="form-check-label" asp-for="@Model[i].EstaSeleccionado">
          @Model[i].RolNombre
        </label>
      </div>
    }
    <button class="btn btn-warning"><i class="fas fa-edit"></i> Actualizar</button>
    <a class="btn btn-outline-secondary" asp-action="EditarUsuario" asp-route-id="@id"><i class="fas fa-arrow-alt-circle-left"></i> Cancelar</a>
  </form>
</div>