@model UserClaimsViewModel

@{
  ViewData["Title"] = "Gestionar Roles Usuario";
}

<div class="w-100 p-3 p-lg-5 border rounded-3 bg-light">
  <h1 class="display-4 text-center text-gradient fw-bold">Gestionar claims de usuario</h1>

  <form method="post">
    @for (int i = 0; i < Model.Claims.Count; i++)
    {
      <div class="form-check">
        <input type="hidden" asp-for="@Model.IdUser" />
        <input type="hidden" asp-for="@Model.Claims[i].TypeClaim" />
        <input class="form-check-input" asp-for="@Model.Claims[i].IsSelected">
        <label class="form-check-label" asp-for="@Model.Claims[i].IsSelected">
          @Model.Claims[i].TypeClaim
        </label>
      </div>
    }
    <button class="btn btn-warning"><i class="fas fa-edit"></i> Actualizar</button>
    <a class="btn btn-outline-secondary" asp-action="EditarUsuario" asp-route-id="@Model.IdUser"><i class="fas fa-arrow-alt-circle-left"></i> Cancelar</a>
  </form>
</div>