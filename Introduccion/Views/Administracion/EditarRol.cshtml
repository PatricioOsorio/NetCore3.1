@model EditarRolView

@{
  ViewData["Title"] = "Editar Rol";
}

<h1 class="display-4 text-center text-gradient fw-bold">Editar rol</h1>

<div class="w-100 p-3 p-lg-5 border rounded-3">

  <form method="post">
    <div class="row mb-3">
      <label class="col-sm-2 col-form-label" asp-for="Id"></label>
      <div class="col-sm-10">
        <input class="form-control" asp-for="Id" disabled>
      </div>
    </div>
    <div class="row mb-3">
      <label class="col-sm-2 col-form-label" asp-for="Name"></label>
      <div class="col-sm-10">
        <input class="form-control" asp-for="Name">
        <span class="text-danger" asp-validation-for="Name"></span>
      </div>
    </div>

    <button type="submit" class="btn btn-warning"><i class="fas fa-edit"></i> Editar</button>
    <a class="btn btn-outline-secondary" asp-action="Index"><i class="fas fa-arrow-alt-circle-left"></i> Cancelar</a>

    <div class="text-danger" asp-validation-summary="All"></div>
  </form>

  <hr class="my-5" />

  <h1 class="display-6 text-center text-gradient fw-normal">Usuarios con este rol</h1>

  <ul class="list-group list-group-numbered mb-3">

    @if (Model.Users.Any())
    {
      @foreach (var user in Model.Users)
      {
        <li class="list-group-item list-group-item-info">@user</li>
      }
    }
    else
    {
      <li class="list-group-item">Ninguno por ahora</li>
    }
  </ul>

  <a class="btn btn-primary"
     asp-controller="Administracion"
     asp-action="EditarUsuarioRol"
     asp-route-rolId="@Model.Id">
    Crear o borrar usuario
  </a>

</div>