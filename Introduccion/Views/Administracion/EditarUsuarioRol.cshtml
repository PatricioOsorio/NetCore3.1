@model List<UsuarioRol>

@{
  ViewData["Title"] = "Editar Rol de usuario";

  var rolId = ViewData["roleId"];
}

<div class="w-100 p-3 p-lg-5 border rounded-3 bg-light">
  <h1 class="display-4 text-center text-gradient fw-bold">Editar rol de usuario</h1>

  <form method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
      <div class="form-check">
        <input type="hidden" asp-for="@Model[i].UsuarioId" />
        <input type="hidden" asp-for="@Model[i].UsuarioNombre" />
        <input class="form-check-input" asp-for="@Model[i].EstaSeleccionado">
        <label class="form-check-label" asp-for="@Model[i].EstaSeleccionado">
          @Model[i].UsuarioNombre
        </label>
      </div>
    }
    <button class="btn btn-warning"><i class="fas fa-edit"></i> Actualizar</button>
    <a class="btn btn-outline-secondary" asp-action="EditarRol" asp-route-id="@rolId"><i class="fas fa-arrow-alt-circle-left"></i> Cancelar</a>
  </form>
</div>